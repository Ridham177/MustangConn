    <script>
      function check_email(form) {
          var verif_email = form.email.value.split('@');
          if (verif_email.length == 2) {
              if (verif_email[1] == "calpoly.edu") {
                  form.action = "/student-verification"
                  return
              }
          }

          alert("Email must be in format <username@calpoly.edu>")
      }
    </script>

    <style>
      html {
          height: 100%;
          overflow: hidden;
      }

      body {
          background-image: url(/images/loginbackground.jpg);
          background-repeat: no-repeat;
          background-size: 100% 100%;
          overflow: hidden;
      }
    </style>

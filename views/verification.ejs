  <body>
    <p class="intro_header"> Welcome to MustangConnect! </p>
    <p class="intro_body">
    A platform where Cal Poly students can meet new people and
    discover new clubs to truly make Cal Poly their "home away
    from home".
    </p>

    <div class="index_field_cont" style="height: 64vh; top: 44%">
		<p class="verif_titles">
    What Type Of Account Are You Making?</p>
    
    <div class="verif_student_user">
    <p class="verif_titles"> Student</p>
		<form onsubmit="check_email(this);">
			<input type="text" class="login_form_control" id="email" name="email" 
			 placeholder="Please Enter Cal Poly Email Address" required autofocus>
			<br><br>
			<input type="submit" class="sendSignupEmail" value="Submit">
    </form>
    </div>

    <br>

    <div class="verif_club_user">
      <p class="verif_titles"> Club </p>
      <label for="clubs" class="verif_titles" style="font-size: 16px; margin-left: 20px"> Choose Cal Poly Club </label>
      <form action="/club-verification">
        <select name="club_name" id="club_name" class="verif_club_directory">
          <% clubs.forEach((item)=>{%>
              <option value="<%=item%>"> <%=item%> </option>
          <%});%> 
        </select>
        <br><br>
        <input type="submit" class="sendClubEmail" value="Submit">
      </form>
    </div>
    </div>
